{
  "name": "pero",
  "version": "0.0.0",
  "description": "declarative cli generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node12 --outdir=dist && tsc --emitDeclarationOnly --outDir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h-a-n-a/pero.git"
  },
  "author": "h-a-n-a <andywangsy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/h-a-n-a/pero/issues"
  },
  "homepage": "https://github.com/h-a-n-a/pero#readme",
  "devDependencies": {
    "@types/node": "^16.3.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.15",
    "eslint": "^7.30.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsonc": "^1.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "pretty-quick --staged"
    ],
    "*.ts": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "assert": "^2.0.0"
  }
}
