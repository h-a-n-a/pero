{
  "name": "pero",
  "version": "0.0.0",
  "description": "declarative cli generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node12 --outdir=dist && tsc --emitDeclarationOnly --outDir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h-a-n-a/pero.git"
  },
  "author": "h-a-n-a <andywangsy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/h-a-n-a/pero/issues"
  },
  "homepage": "https://github.com/h-a-n-a/pero#readme",
  "devDependencies": {
    "@hanao/eslint-config-basic": "^0.1.3",
    "@types/node": "^16.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.15",
    "eslint": "^7.30.0",
    "husky": "4",
    "lint-staged": "^11.0.0",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "assert": "^2.0.0"
  }
}
