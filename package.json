{
  "name": "pero",
  "version": "0.2.1",
  "description": "Route based CLI tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pero": "./dist/cli/pero.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli",
    "node",
    "typescript",
    "command-line"
  ],
  "scripts": {
    "build": "esno ./build/index.ts && tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h-a-n-a/pero.git"
  },
  "author": "h-a-n-a <andywangsy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/h-a-n-a/pero/issues"
  },
  "homepage": "https://github.com/h-a-n-a/pero#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "assert": "^2.0.0",
    "esbuild": "^0.12.15",
    "mri": "^1.1.6",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@hanao/eslint-config-basic": "^0.1.3",
    "@types/mri": "^1.1.1",
    "@types/node": "^16.3.0",
    "@types/text-table": "^0.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-plugin-d.ts": "^1.0.6",
    "eslint": "^7.30.0",
    "esno": "^0.8.0",
    "husky": "4",
    "lint-staged": "^11.0.0",
    "typescript": "^4.3.5"
  }
}
